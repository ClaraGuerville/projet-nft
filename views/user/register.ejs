<!DOCTYPE html>
<html lang="fr">
  <head>
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link rel="stylesheet" href="/assets/css/style.css">
      <title>S'inscrire</title>
  </head>
  <body>
      <main class="user-form container-fluid">

        <% if(locals.success) { %>
          <p><%= success %></p>
        <% } %>

        <!-- two part container -->
        <div class="row ">
          <!-- image container -->
          <aside class="user_form_bg d-none d-sm-block col-sm-5 col-lg-6 ps-0">
          </aside>

          <!-- form container -->
          <form action="" method="post" class="col-sm-7 col-lg-6 my-sm-5 my-lg-0">
            <div class="row flex-center h-100"> 
              <div class="col-12 col-md-11 col-lg-11 col-xl-9 col-xxl-7">
                <div class="row flex-column flex-center gap-4">
                  <!-- form title -->
                  <h2 class="fw-bold text-center">Inscription à votre espace</h2>
                  
                  <!-- avatar input -->
                  <div class="px-4">
                    <label for="avatar" class="d-block mb-2">Pseudo</label>
                    <input
                      id="avatar"
                      name="avatar"
                      type="file"
                      placeholder="Saisir votre pseudo" 
                      class="w-100"/>
                  </div>

                  <!-- peudonym input -->
                  <div class="px-4">
                    <label for="pseudo" class="d-block mb-2">Pseudo</label>
                    <input
                      id="pseudo"
                      name="pseudo"
                      type="text"
                      value="pseudo"
                      required="required"
                      placeholder="Saisir votre pseudo" 
                      class="user-form__input w-100"/>
                  </div>

                  <!-- pwd input -->
                  <div class="px-4">
                    <label for="password" class="d-block mb-2">Mot de passe</label>
                    <input
                      id="password"
                      name="password"
                      type="text"
                      value="password"
                      required="required"
                      placeholder="Saisir votre mot de passe" 
                      class="user-form__input w-100""/>
                  </div>

                  <!-- repeat pwd input -->
                  <div class="px-4">
                    <label for="repeatPassword" class="d-block mb-2">Confirmer le mot de passe</label>
                    <input
                      id="repeatPassword"
                      name="repeatPassword"
                      type="text"
                      value="password"
                      required="required"
                      placeholder="Confirmer le mot de passe" 
                      class="user-form__input w-100""/>
                  </div>
                  
                  <!-- connexion button -->
                  <div class="px-4 mt-4">
                    <input 
                      type="submit" 
                      value="S'inscrire" 
                      class="btn violet_gradient_btn w-100"/>

                    <span class="d-block text-center small_text mt-2">Déjà menmbre ? <a href="login.html" class="small_purple_link no-decoration">Connectez-vous</a>.</span>

                  </div>
                </div>

              </div>
            </div>
          </form>
        </div>
      </main>
  </body>
</html>